package railIl;

import java.util.ArrayList;
import java.util.Scanner;

public class Travel implements Comparable<Travel> {

	private ArrayList<Clock> times;
	private ArrayList<String> stations;

	public Travel(int numOfTotalStations, Scanner scan) throws Exception {
		times= new ArrayList<Clock>();
		stations=new ArrayList<String>();
		for (int i = 0; i < numOfTotalStations; i++) {
			System.out.println("Please enter the name of station "+ (i+1));
			scan.nextLine();
			String station=scan.nextLine();
			stations.get(i).add(station);
			times.add(scan);
			
			
		}
		setTime(startTime);
		setTime(middleTime);
		setTime(endTime);
		this.startStation = startStation;
		this.intermidateStation = intermidateStation;
		this.endStation = endStation;
	}
	
	public Travel(Scanner scan){
		
		
	}

	public Clock getStartTime() {
		return startTime;
	}

	public Clock getMiddleTime() {
		return middleTime;
	}

	public void setTime(String time) throws Exception {
		if (!(time.contains(":")))
			throw new Exception("Hours and minutes must be seperate with :");

		String[] parts = time.split(":");
		this.startTime = new Clock(Integer.parseInt(parts[0]), Integer.parseInt(parts[1]));

	}

	public Clock getEndTime() {
		return endTime;
	}

	public String getStartStation() {
		return startStation;
	}

	public String getIntermidateStation() {
		return intermidateStation;
	}

	public String getEndStation() {
		return endStation;
	}

	public String toString() {
		return startStation + ", " + startTime + ", " + intermidateStation + ", " + middleTime + ", " + endStation
				+ ", " + endTime;
	}

	public void showTravelDetails() {
		System.out.println(this.toString());
	}

	@Override
	public int compareTo(Travel travel) {
		if(startTime.getHours()<travel.getStartTime().getHours())
		return -1;
		
		else if(startTime.getHours()==travel.getStartTime().getHours()){
			if(startTime.getMinutes()<travel.getStartTime().getMinutes())
				return -1;
			
			if(startTime.getMinutes()>travel.getStartTime().getMinutes())
				return 1;
			
			else
				return 0;
			
			
			
	}
		else
			return 1;

}

}
