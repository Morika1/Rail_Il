package railIl;

public class Travel {

	private Clock startTime;
	private Clock endTime;
	private Station startStation;
	private Station endStation;

	public Travel(String startTime, String endTime, String startStation, String endStation) throws Exception { 
		setTime(startTime);
		setTime(endTime);
		setStartStation(startStation);
		setEndStation(endStation);
	}

	public Clock getStartTime() {
		return startTime;
	}

	public void setTime(String time) throws Exception {
		if (!(time.contains(":")))
			throw new IllegalArgumentException("Hours and minutes must be seperate with :");

		String[] parts = time.split(":");
		this.startTime = new Clock(Integer.parseInt(parts[0]), Integer.parseInt(parts[1]));

	}

	public Clock getEndTime() {
		return endTime;
	}

	public Station getStartStation() {
		return startStation;
	}

	public void setStartStation(String startStation) {
		this.startStation = new Station(startStation);
	}

	public Station getEndStation() {
		return endStation;
	}

	public void setEndStation(String endStation) {
		this.endStation = new Station(endStation);
	}

	public String toString() {
		return startStation + ", " + startTime + ", " + endStation + ", " + endTime;
	}

	public void showTravelDetails() {
		System.out.println(this.toString());
	}

}
